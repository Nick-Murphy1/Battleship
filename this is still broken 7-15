import random
from colorama import Fore, Back, Style
import sys
import time
import os

# Creates the board depending on the size
def createField(size):
    return [["0 "] * size for _ in range(size)]

# Prints the user's board in a pretty little format
def printField(field):
    size = len(field)
    border = "-" * (size * 4)
    rows = f"\n {border}\n"
    for i in range(size):
        rows += f"| {'| '.join(field[i])}|\n{border}\n"
    print(rows)

# Starts the game

def placeShips(entity, size, computer=False):
    while True:
        if computer:
            shipRow = random.randint(0, size - 2)
            shipCol = random.randint(0, size - 1)
            shipRow2 = shipRow + 1
            shipCol2 = shipCol
            ship2Row = random.randint(0, size - 1)
            ship2Col = random.randint(0, size - 2)
            ship2Row2 = ship2Row
            ship2Col2 = ship2Col + 1
        else:
            try:
                shipRow = int(input("What row would you like the vertical ship to be on 1-size? ")) - 1
                shipCol = int(input("What column would you like the vertical ship to be on 1-size? ")) - 1
                shipRow2 = shipRow + 1
                shipCol2 = shipCol
                ship2Row = int(input("What row would you like the horizontal ship to be on 1-size? ")) - 1
                ship2Col = int(input("What column would you like the horizontal ship to be on 1-size? ")) - 1
                ship2Row2 = ship2Row
                ship2Col2 = ship2Col + 1
            except:
                print("Please enter valid integers")
                continue

        if validateShipPlacement(shipRow, shipCol, shipRow2, shipCol2, ship2Row, ship2Col, ship2Row2, ship2Col2, size):
            entity['ships'].append((shipRow, shipCol))
            entity['ships'].append((shipRow2, shipCol2))
            entity['ships'].append((ship2Row, ship2Col))
            entity['ships'].append((ship2Row2, ship2Col2))
            entity['field'][shipRow][shipCol] = "ðŸš¤"
            entity['field'][shipRow2][shipCol2] = "ðŸš¤"
            entity['field'][ship2Row][ship2Col] = "ðŸš¤"
            entity['field'][ship2Row2][ship2Col2] = "ðŸš¤"
            break

def validateShipPlacement(shipRow, shipCol, shipRow2, shipCol2, ship2Row, ship2Col, ship2Row2, ship2Col2, size):
    if shipRow > size - 1 or shipCol > size or shipRow2 > size or shipCol2 > size or ship2Row > size or ship2Col > size - 1 or ship2Row2 > size or ship2Col2 > size:
        print("Your ship is out of bounds, please try again.")
        return False
    if (shipRow, shipCol) == (ship2Row, ship2Col) or (shipRow2, shipCol2) == (ship2Row, ship2Col) or (shipRow, shipCol) == (ship2Row2, ship2Col2) or (shipRow2, shipCol2) == (ship2Row2, ship2Col2):
        print("You cannot place ships in the same space.")
        return False
    return True

def handleShot(shot, target, shooter, tryCounter):
    if shot in target['ships']:
        shooter['field'][shot[0]][shot[1]] = "ðŸ”¥ "
        printField(shooter['field'])
        if shot in target['ships'][:2]:
            shooter['ship1HitCounter'] += 1
        else:
            shooter['ship2HitCounter'] += 1
    else:
        shooter['field'][shot[0]][shot[1]] = "â›” "
        printField(shooter['field'])
        tryCounter += 1

def computerShot(computer, player, size):
    while True:
        computerRowAttempt = random.randint(0, size - 1)
        computerColAttempt = random.randint(0, size - 1)
        computerShot = (computerRowAttempt, computerColAttempt)
        if computerShot not in computer['moves']:
            computer['moves'].append(computerShot)
            break

    if computerShot in player['ships']:
        computer['field'][computerRowAttempt][computerColAttempt] = "ðŸ”¥ "
        printField(computer['field'])
        if computerShot in player['ships'][:2]:
            computer['ship1HitCounter'] += 1
        else:
            computer['ship2HitCounter'] += 1
    else:
        computer['field'][computerRowAttempt][computerColAttempt] = "ðŸ˜‚ "
        printField(computer['field'])

    if computer['ship1HitCounter'] == 2:
        printField(computer['field'])
        print(Fore.RED + "Your ship got sunk!!!")
        print(Fore.RESET)
    if computer['ship2HitCounter'] == 2:
        printField(computer['field'])
        print(Fore.RED + "Your ship got sunk!!!")
        print(Fore.RESET)
    if computer['ship1HitCounter'] == 2 and computer['ship2HitCounter'] == 2:
        printField(computer['field'])
        print(Fore.RED + "You lose, the computer sank your ships.")
        print(Fore.RESET)
        exit()



