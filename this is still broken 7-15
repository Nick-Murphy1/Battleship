    import sys
    import time


    def print_fast(str):
            for char in str:
                time.sleep(.005)
                sys.stdout.write(char)
                sys.stdout.flush()


    print_fast("""
            
                                 _           _   _   _           _     _
                                | |         | | | | | |         | |   (_)      
                                | |__   __ _| |_| |_| | ___  ___| |__  _ _ __  
                                | '_ \ / _` | __| __| |/ _ \/ __| '_ \| | '_ \ 
                                | |_) | (_| | |_| |_| |  __/\__ \ | | | | |_) |
                                |_.__/ \__,_|\__|\__|_|\___||___/_| |_|_| .__/ 
