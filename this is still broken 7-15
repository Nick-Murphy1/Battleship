    """)
    time.sleep(1)
    os.system('cls' if os.name == 'nt' else 'clear')



def main():
    animate()
    def print_fast(str):
        for char in str:
            time.sleep(.005)
            sys.stdout.write(char)
            sys.stdout.flush()

    moveList = []
    player = {
        'field': createField(size),
        'ships': [],
        'moves': []
    }
    computer = {
        'field': createField(size),
        'ships': [],
        'moves': []
    }
    print_fast("Welcome!!!")
    print("")
    print_fast("Lets get started ")
    print("")
    #this runs the program with all the functions and determines board size
    while True:
        try:
            size = abs(int(input("What size do you want your board to be 1-52? (ex: 4x4 = 4, 8x8 = 8, 3x3 = 3) ")))
            if size < 3:
                print("You can't have a board that small.")
                continue
            if size > 52:
                print("That's too big")
                continue
            else:
                break
        except:
            print("Please enter a valid integer.")

    # Places the ships
    placeShips(player, size)
    placeShips(computer, size, computer=True)
    print("This is your ship represented by ðŸš¤")
    printField(computer['field'])

    # Initializes hit counters
    player['ship1HitCounter'] = 0
    player['ship2HitCounter'] = 0
    computer['ship1HitCounter'] = 0
    computer['ship2HitCounter'] = 0

    tryCounter = 0
    playing = True

    while playing:
        # Player's turn to shoot
        print("This is the computer's sea. Try to hit their ship. Hits will be marked with a ðŸ”¥ and misses with a â›”.")
        printField(player['field'])
        shooting = True
        while shooting:
            try:
                rowAttempt1 = int(input("Enter the row of your shot (1-size): "))
                colAttempt1 = int(input("Enter the column of your shot (1-size): "))
                if 0 < rowAttempt1 <= size and 0 < colAttempt1 <= size:
                    rowAttempt = rowAttempt1 - 1
                    colAttempt = colAttempt1 - 1
                    shot = (rowAttempt, colAttempt)
                    if shot in moveList:
                        print("You have already shot this area. Please select a different place.")
                        shooting = True
                    else:
                        shooting = False
                else:
                    print("This space does not exist in the field you chose.")
                    shooting = True
            except:
                print("Please enter an integer")
                shooting = True

        moveList.append(shot)
        handleShot(shot, computer, player, tryCounter)

        if player['ship1HitCounter'] == 2 and player['ship2HitCounter'] == 2:
            printField(player['field'])
            print(Fore.GREEN + "Both ships sunk, YOU WIN!!!!")
            print(Fore.RESET)
            exit()

        if tryCounter == 5:
            print(Fore.RED + "Sorry, you have reached 5 shots, you lose.")
            print(Fore.RESET)
            playing = False

        # Computer's turn to shoot
        computerShot(computer, player, size)

main()
